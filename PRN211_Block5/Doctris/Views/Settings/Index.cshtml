@model IEnumerable<Doctris.Models.Setting>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Setting List";

}


<div class="layout-specing">
    <div class="row">
        <div class="col-xl-9 col-lg-6 col-md-4">
            <h5 class="mb-0">Settings</h5>
            <nav aria-label="breadcrumb" class="d-inline-block mt-2">
                <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                    <li class="breadcrumb-item"><a href="index.html">Doctris</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Settings</li>
                </ul>
            </nav>
        </div><!--end col-->

        <div class="col-xl-3 col-lg-6 col-md-8 mt-4 mt-md-0">
            <div class="justify-content-md-end">
                <form>
                    <div class="row justify-content-between align-items-center">
                        <div class="col-sm-12 col-md-7 mt-4 mt-sm-0">
                            <div class="d-grid">
                                <a asp-controller="Settings" asp-action="Create" class="btn btn-primary">Create New Settings</a>
                            </div>
                        </div><!--end col-->
                    </div><!--end row-->
                </form><!--end form-->
            </div>
        </div><!--end col-->
    </div><!--end row-->

    <div class="row">
        <div class="col-12 mt-4">
            <div class="table-responsive bg-white shadow rounded">
                <table class="table mb-0 table-center">
                    <thead>
                        <tr>
                            <th class="border-bottom p-3" style="min-width: 50px;">#</th>
                            <th class="border-bottom p-3" style="min-width: 180px;">Type</th>
                            <th class="border-bottom p-3" style="min-width: 150px;">Name</th>
                            <th class="border-bottom p-3">Description</th>                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                                <th class="p-3">@Html.DisplayFor(modelItem => item.SettingId)</th>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.SettingType)</td>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.SettingName)</td>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.SettingDescription)</td>
                                                      
                            <td class="text-end p-3">
                                    <a asp-controller="Settings" asp-action="Edit" asp-route-id="@item.SettingId" class="btn btn-icon btn-pills btn-soft-primary" ><i class="uil uil-pen"></i></a>
                                    @*<a asp-controller="Settings" asp-action="Details" asp-route-id="@item.SettingId" class="btn btn-icon btn-pills btn-soft-success" ><i class="uil uil-check-circle"></i></a>*@
                                    <a asp-controller="Settings" asp-action="Delete" asp-route-id="@item.SettingId" class="btn btn-icon btn-pills btn-soft-danger" ><i class="uil uil-times-circle"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end row-->

    <div class="row text-center">
        <!-- PAGINATION START -->
        <div class="col-12 mt-4">
            <div class="d-md-flex align-items-center text-center justify-content-between">
                <span class="text-muted me-3">Showing 1 - 10 out of 50</span>
                <ul class="pagination justify-content-center mb-0 mt-3 mt-sm-0">
                    <li class="page-item"><a class="page-link" href="javascript:void(0)" aria-label="Previous">Prev</a></li>
                    <li class="page-item active"><a class="page-link" href="javascript:void(0)">1</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0)">2</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0)">3</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0)" aria-label="Next">Next</a></li>
                </ul>
            </div>
        </div><!--end col-->
        <!-- PAGINATION END -->
    </div><!--end row-->
</div>












