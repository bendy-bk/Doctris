@model IEnumerable<Doctris.Models.Appointment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="layout-specing" style="width: 100%">
    <div class="row">
        <div class="col-xl-9 col-lg-6 col-md-4">
            <h5 class="mb-0">Appointment</h5>
            <nav aria-label="breadcrumb" class="d-inline-block mt-2">
                <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                    <li class="breadcrumb-item"><a href="index.html">Doctris</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Appointment</li>
                </ul>
            </nav>
        </div><!--end col-->

        <div class="col-xl-3 col-lg-6 col-md-8 mt-4 mt-md-0">
            <div class="justify-content-md-end">
                <form>
                    <div class="row justify-content-between align-items-center">


                        <div class="col-sm-12 col-md-5">
                            <div class="mb-0 position-relative">
                                <select id="category-filter">
                                    <option value="all">All</option>
                                    @foreach (var item in ViewBag.List)
                                    {
                                        <option value="@item.DepartmentId">@item.Name</option>
                                    }
                                </select>
                                
                                @*<select id="category-filter" class="form-control" asp-items="ViewBag.DepartmentId"></select>*@
                            </div>
                        </div><!--end col-->




                        <div class="col-sm-12 col-md-7 mt-4 mt-sm-0">
                            <div class="d-grid">
                                <a asp-action="Create" class="btn btn-primary">Appointment</a>
                            </div>
                        </div><!--end col-->
                    </div><!--end row-->
                </form><!--end form-->
            </div>
        </div><!--end col-->
    </div><!--end row-->

    <div class="row">
        <div class="col-12 mt-4">
            <div class="table-responsive bg-white shadow rounded">
                <table class="table mb-0 table-center" id="data-table">
                    <thead>
                        <tr>
                            <th class="border-bottom p-3" style="min-width: 50px;">#</th>
                            <th class="border-bottom p-3" style="min-width: 70px;">Name</th>
                            <th class="border-bottom p-3" style="min-width: 100px;">Email</th>
                            <th class="border-bottom p-3">Age</th>
                            <th class="border-bottom p-3">Gender</th>
                            <th class="border-bottom p-3">Department</th>
                            <th class="border-bottom p-3" style="min-width: 100px;">Date/Time</th>

                            <th class="border-bottom p-3" style="min-width: 100px;">Doctor</th>

                            <th class="border-bottom p-3" style="min-width: 100px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th class="p-3">@Html.DisplayFor(modelItem => item.AppointmentId)</th>
                                <td class="p-3">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.Age)</td>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td class="p-3 category">@Html.DisplayFor(modelItem => item.Department.Name)</td>
                                <td class="p-3">@Html.DisplayFor(modelItem => item.Date)</td>

                                <td class="p-3">
                                    @Html.DisplayFor(modelItem => item.DoctorNavigation.UserName)
                                </td>

                                <td class="p-3">
                                    <a asp-controller="Appointments" asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-icon btn-pills btn-soft-primary"><i class="uil uil-eye"></i></a>
                                    <a asp-controller="Appointments" asp-action="Apply" asp-route-id="@item.AppointmentId" class="btn btn-icon btn-pills btn-soft-success"><i class="uil uil-check-circle"></i></a>
                                    <a asp-controller="Appointments" asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-icon btn-pills btn-soft-danger"><i class="uil uil-times-circle"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end row-->

    <div class="row text-center">
        <!-- PAGINATION START -->
        <div class="col-12 mt-4">
            <div class="d-md-flex align-items-center text-center justify-content-between">
                <span class="text-muted me-3">Showing 1 - 10 out of 50</span>
                <ul class="pagination justify-content-center mb-0 mt-3 mt-sm-0">
                    <li class="page-item"><a class="page-link" href="javascript:void(0)" aria-label="Previous">Prev</a></li>
                    <li class="page-item active"><a class="page-link" href="javascript:void(0)">1</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0)">2</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0)">3</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0)" aria-label="Next">Next</a></li>
                </ul>
            </div>
        </div><!--end col-->
        <!-- PAGINATION END -->
    </div><!--end row-->
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var categoryFilter = document.getElementById('category-filter');
        var dataRows = document.querySelectorAll('#data-table tbody tr');

        categoryFilter.addEventListener('change', function () {
            var selectedCategory = this.value;

            dataRows.forEach(function (row) {
                var categoryCell = row.querySelector('.category');
                var rowCategory = categoryCell.textContent.trim();

                if (selectedCategory === 'all' || rowCategory === selectedCategory) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script>



